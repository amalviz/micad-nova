# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/test_automation
DATABASE_POOL_SIZE=5

# Web Testing Configuration
WEB_BROWSER=chromium
WEB_HEADLESS=false
WEB_TIMEOUT=30000
WEB_BASE_URL=https://example.com

# Mobile Testing Configuration
APPIUM_SERVER_URL=http://localhost:4723
ANDROID_APP_PATH=/path/to/app.apk
IOS_APP_PATH=/path/to/app.ipa
MOBILE_PLATFORM_NAME=Android
MOBILE_DEVICE_NAME=emulator-5554

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/test.log

# AI Analysis Configuration
ENABLE_AI_ANALYSIS=false
AI_MODEL_NAME=bert-base-uncased
AI_CONFIDENCE_THRESHOLD=0.7

# Reporting Configuration
REPORT_FORMAT=html,allure
REPORT_OUTPUT_DIR=reports
ENABLE_SCREENSHOTS=true
ENABLE_VIDEO_RECORDING=false

# General Configuration
PARALLEL_WORKERS=4
RETRY_FAILED_TESTS=1
TEST_TIMEOUT=300